import React from 'react'

import { renderWithRedux } from 'utils/tests/renderWithRedux'

import { screen } from '@testing-library/react'

import {{pascalCase name}} from './index'

describe('<{{pascalCase name}} />', () => {
  it('should render the heading', () => {
    const { container } = renderWithRedux(<{{pascalCase name}} />)

    expect(screen.getByRole('heading', { name: /{{pascalCase name}}/i })).toBeInTheDocument()

    expect(container.firstChild).toMatchSnapshot()
  })
})
